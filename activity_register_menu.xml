<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#e0218a">

        <TextView
            android:id="@+id/AccountSelectionText"
            android:layout_width="244dp"
            android:layout_height="142dp"
            android:layout_marginTop="52dp"
            android:fontFamily="sans-serif-medium"
            android:text="Please select an account type"
            android:textAlignment="center"
            android:textColor="#100F0F"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="152dp"
            android:layout_height="89dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/hearthealh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/DoctorBtn"
            android:layout_width="134dp"
            android:layout_height="97dp"
            android:layout_marginStart="48dp"
            android:backgroundTint="#e0218a"
            android:text="Doctor"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AccountSelectionText" />

        <Button
            android:id="@+id/PatientBtn"
            android:layout_width="135dp"
            android:layout_height="97dp"
            android:backgroundTint="#e0218a"
            android:text="Patient"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/DoctorBtn"
            app:layout_constraintTop_toBottomOf="@+id/AccountSelectionText" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:background="#e0218a"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

